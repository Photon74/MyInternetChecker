<Window x:Class="MyInternetChecker.HostsSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Хосты для проверки" 
        Height="250" 
        Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="True"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <!-- Стиль для круглой кнопки удаления -->
        <Style x:Key="RoundDeleteButton" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Width="22" 
                                Height="22"
                                Background="Transparent"
                                BorderBrush="LightGray"
                                BorderThickness="1"
                                CornerRadius="4">
                            <TextBlock Text="✕" 
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="10"
                                       FontWeight="Bold"
                                       Foreground="Gray"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFEFEFEF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFD0D0D0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для обычных кнопок со скругленными углами -->
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Background" Value="#FFE1E1E1"/>
            <Setter Property="BorderBrush" Value="LightGray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFD0D0D0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FFC0C0C0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#FF888888" 
            BorderThickness="1" 
            CornerRadius="8"
            Background="WhiteSmoke"
            Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="10" 
                              ShadowDepth="3" 
                              Opacity="0.3"/>
        </Border.Effect>

        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Список хостов с заголовком -->
            <Border Grid.Row="0" 
                    BorderBrush="LightGray" 
                    BorderThickness="0,0,0,1"
                    Margin="0,0,0,5">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" 
                               Text="Текущие хосты:" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,5"/>

                    <ListView x:Name="HostsListView" 
                              ItemsSource="{Binding Hosts}"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{Binding}" 
                                               VerticalAlignment="Center"
                                               Margin="5,2"/>

                                    <Button Grid.Column="1" 
                                            Command="{Binding DataContext.DeleteHostCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource RoundDeleteButton}"
                                            Margin="2"/>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </DockPanel>
            </Border>

            <!-- Поле для добавления нового хоста -->
            <StackPanel Grid.Row="1" 
                        Orientation="Horizontal" 
                        Margin="0,5,0,10">
                <TextBox x:Name="NewHostTextBox" 
                         Width="250" 
                         Margin="0,0,5,0"
                         VerticalContentAlignment="Center"
                         Text="{Binding NewHost, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding AddHostCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>
                <Button x:Name="AddHostButton" 
                        Content="+" 
                        Command="{Binding AddHostCommand}"
                        Width="30" 
                        Height="25"
                        FontWeight="Bold"
                        Style="{StaticResource RoundedButton}"/>
            </StackPanel>

            <!-- Кнопки управления -->
            <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right">
                <Button Content="Сохранить" 
                        Command="{Binding SaveCommand}"
                        Width="80" 
                        Height="25"
                        Margin="0,0,10,0"
                        Style="{StaticResource RoundedButton}"/>
                <Button Content="Закрыть" 
                        Command="{Binding CancelCommand}"
                        Width="80"
                        Height="25"
                        Style="{StaticResource RoundedButton}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>